<% provide(:title, 'base_edit') %>

<h1>拠点情報の修正</h1>

<div>
  <table class="table table-bordered table-condensed user-table">

    <%= form_with(model: @base_point, url: base_point_path(@base_point), method: :patch) do |f| %>
     <%= f.label :number %>
     <%= f.text_field :number, class: "form-control" %>

     <%= f.label :name %>
     <%= f.text_field :name, class: "form-control" %>

     <%= f.label :attendance_type %>
     <%= f.text_field :attendance_type, class: "form-control" %>

     <%= f.submit "修正", class: "btn btn-primary" %>
    <% end %>
  </table>
</div>

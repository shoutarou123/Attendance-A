<%= provide(:title, 'overtime-aprv') %>

<%= turbo_frame_tag 'modal' do %>
  <div class="modal-dialog modal-lg modal-dialog-center" data-controller="edit_overtime_req">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-action="edit_overtime-req#close" aria-label="Close">
          <!--<span aria-hidden="true">×</span>-->
           <%= link_to "×", '#', data: { controller: "modals", action: 'modals#click->close' } %>
        </button>
      </div✕
      
    <!--上長ユーザーでの残業申請フォーム-->
      <div class="modal-body text-center">
        <%= form_with(model: @user, url: attendances_update_overtime_aprv_user_path, local: true, method: :patch) do |f| %>
          <% @users.each do |user| %>
            <h1 class="modal-title"><%= "【#{user.name}からの残業申請】" %></h1>
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <table class="table table-striped table-bordered table-condensed">
                  <thead>
                    <tr class="text-center">
                      <td>日付</td>
                      <td>曜日</td>
                      <td>終了予定時間</td>
                      <td>指定勤務終了時間</td>
                      <td>時間外時間</td>
                      <td>業務処理内容</td>
                      <td>指示者確認㊞</td>
                      <td>変更</td>
                      <td>勤怠を確認する</td>
                    </tr>
                  </thead>
                  
                  <tbody>
                    <% @attendances.where(user_id: user.id).each do |day| %>
                      <%= f.fields_for "attendances[]", day do |attendance| %>
                        <tr class="text-center">
                          <td><%= l(day.worked_on, format: :short) %></td> <!--日付-->
                          <td><%= $days_of_the_week[day.worked_on.wday] %></td> <!--曜日-->
                          <td><%= l(attnendance.object.ended_at, format: :time) %></td> <!--終了予定時間日-->
                          <td><%= format_basic_info(@user.designated_work_end_time %></td> <!--指定勤務終了時間-->
                          <td>
                            <%= format_ended_at(attendance.object) %> <!--時間外時間-->
                          </td>
                          <td><%= day.task_description %></td> <!--業務処理内容-->
                          <td><%= attendance.select :overwork_status ['なし', '申請中', '承認', '否認'], {}, { class: 'form-control' } %></td> <!--指示者確認㊞-->
                          <td><%= attendance.check_box :overwork_chk %></td> <!--変更-->
                          <td><%= link_to '確認', user_path(user, date: day.worked_on.beginning_of_month), data: { controller: "modals", action: 'modals#click->close' }, class: "btn btn-primary" %></td>
                        </tr>
                       <% end %>
                     <% end %>
                   </tbody>
                </table>
              </div>
            </div>
          <% end %>
          <%= f.submit "変更を送信する", class: "btn btn-primary btn-block modal-btn" %>
            <!--<button type="button" class="btn btn-default btn-basic-info" data-action="edit_overtime_req#close">キャンセル</button>-->
          <%= link_to 'キャンセル', '#', data: { controller: "modals", action: 'modals#click->close' } %>
        <% end %>
      </div>
    </div>
  <% end %>
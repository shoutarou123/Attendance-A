<%= provide(:title, 'overtime-req') %>

<%= turbo_frame_tag 'modal' do %>
<div class="modal-dialog modal-lg modal-dialog-center" data-controller="edit_overtime_req">
  <div class="modal-content">
    <div class="modal-header", id="custom-modal-header">
      <button type="button" class="close" data-action="edit_overtime-req#close" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>

    <%# 一般ユーザーでの残業申請フォーム %>
      <h1 class="modal-title">【残業申請】</h1>
    </div>
    <div class="modal-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            
            <table class="table table-striped table-bordered table-condensed">
              <thead>
                <tr class="text-center">
                  <td>日付</td>
                  <td>曜日</td>
                  <td colspan="6">終了予定時間</td> 
                  <td>翌日</td>
                  <td colspan="6">業務処理内容</td>
                  <td colspan="6">指示者確認㊞</td>
                </tr>
              </thead>
              <tbody>
                
                  <tr class="text-center">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td colspan="6"></td>
                    <td colspan="6"></td>
                    <td colspan="6">
                     
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table> 
              <%= f.submit "変更を送信する", class: "btn btn-primary btn-block modal-btn" %>
              <button type="button" class="btn btn-default btn-form-control" data-action="edit_overtime_req#close">キャンセル</button>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
<% end %>